                            <expander:SfExpander.Header>
                                <Label
                                    Margin="20,0,0,0"
                                    HorizontalOptions="Center"
                                    Text=" " />
                            </expander:SfExpander.Header>
                            <expander:SfExpander.Content>
                                <StackLayout Orientation="Horizontal">
                                    <Label
                                        HeightRequest="25"
                                        HorizontalOptions="FillAndExpand"
                                        Text="{Binding .Book.BookName}" />
