                                </Grid.RowDefinitions>
                                <Label
                                    Grid.Row="0"
                                    Margin="4"
                                    FontAttributes="Bold"
                                    FontFamily="Comic Sans MS"
                                    FontSize="Large"
                                    Text="{Binding FullTitle}" />
                                <StackLayout
